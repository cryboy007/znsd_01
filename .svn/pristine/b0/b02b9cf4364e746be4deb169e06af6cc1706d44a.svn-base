<!DOCTYPE html>
<!--suppress ALL-->
<html lang="en" xmlns:th="http://www.thymeleaf.org">
<head>
    <link th:href="@{/static/js/jquery-3.3.1.min.js}" />
    <script type="text/javascript" src="http://code.jquery.com/jquery-latest.js"></script>
    <meta charset="UTF-8">
    <title>注册页面</title>
    <style>
        *{
            margin: 0px;
            padding: 0px;
            box-sizing: border-box;
        }
        body{
            background-repeat: no-repeat;
            background-position: center;
            padding-top: 25px;
        }

        .rg_layout{
            width: 900px;
            height: 500px;
            border: 8px solid #EEEEEE;
            background-color: white;
            /*让div水平居中*/
            margin: auto;
        }

        .rg_left{
            /*border: 1px solid red;*/
            float: left;
            margin: 15px;
        }
        .rg_left > p:first-child{
            color:#FFD026;
            font-size: 20px;
        }

        .rg_left > p:last-child{
            color:#A6A6A6;
            font-size: 20px;

        }


        .rg_center{
            float: left;
            /* border: 1px solid red;*/

        }

        .rg_right{
            /*border: 1px solid red;*/
            float: right;
            margin: 15px;
        }

        .rg_right > p:first-child{
            font-size: 15px;

        }
        .rg_right p a {
            color:pink;
        }

        .td_left{
            width: 100px;
            text-align: right;
            height: 45px;
        }
        .td_right{
            padding-left: 50px ;
        }

        #username,#password,#email,#name,#tel,#birthday,#checkcode{
            width: 251px;
            height: 32px;
            border: 1px solid #A6A6A6 ;
            /*设置边框圆角*/
            border-radius: 5px;
            padding-left: 10px;
        }
        #checkcode{
            width: 110px;
        }

        #img_check{
            height: 32px;
            vertical-align: middle;
        }

        #btn_sub{
            width: 150px;
            height: 40px;
            background-color: #FFD026;
            border: 1px solid #FFD026 ;
        }
        .error{
            color: red;
        }

    </style>

</head>
<body>

<script>


    window.onload = function(){
        document.getElementById("btn_sub").onclick = function () {

            return checkUsername() && checkPassword() && checkEmail();
        }

        //鼠标失焦验证
        document.getElementById("username").onblur = checkUsername;
        document.getElementById("password").onblur = checkPassword;
        document.getElementById("email").onblur = checkEmail;



    }
    // 校验用户邮箱
    function checkEmail() {
        var email = document.getElementById("email").value;
        var ze_psd = /^([A-Za-z0-9_\-\.])+\@([A-Za-z0-9_\-\.])+\.([A-Za-z]{2,4})$/;;
        var flag = ze_psd.test(email);

        console.log(flag);

        var u_psd = document.getElementById("u_email");
        if (flag){
            u_psd.innerHTML = "<img width='25' height='15' >"
        }else{
            u_psd.innerHTML = "您的邮箱格式不正确！";
        }
        return flag;
    }

    //校验用户名格式
    function checkUsername(){
        var username = document.getElementById("username").value;
        var u_name = document.getElementById("u_name");
        var ze_user = /^\w{6,12}$/;
        var flag = ze_user.test(username);

        console.log(flag);

        if (flag){
            u_name.innerHTML = "<img width='25' height='15' >"
        }else{
            u_name.innerHTML = "正确长度为入6-12位";
        }
        return flag;
    }

    // 校验用户密码
    function checkPassword(){
        var password = document.getElementById("password").value;
        var ze_psd = /^\w{6,12}$/;
        var flag = ze_psd.test(password);

        console.log(flag);

        var u_psd = document.getElementById("u_psd");
        if (flag){
            u_psd.innerHTML = "<img width='25' height='15' >"
        }else{
            u_psd.innerHTML = "请输入6-12有效数字！";
        }
        return flag;
    }



</script>


<div class="rg_layout">
    <div class="rg_left">
        <p>新用户注册</p>
        <p>USER REGISTER</p>

    </div>

    <div class="rg_center">
        <div class="rg_form">
            <!--定义表单 form-->
            <form action="/zhuCe" method="post">
                <table id="from">
                    <tr>
                        <td class="td_left"><label for="username">用户名</label></td>
                        <td class="td_right">
                            <input type="text" name="username" id="username" placeholder="请输入用户名" required="required">
                            <span id="u_name" class="error" th:text="${msg}"></span>
                        </td>
                    </tr>

                    <tr>
                        <td class="td_left"><label for="password">密码</label></td>
                        <td class="td_right">
                            <input type="password" name="password" id="password" placeholder="请输入密码" required="required">
                            <span id="u_psd" class="error"></span>
                        </td>
                    </tr>

                    <tr>
                        <td class="td_left"><label for="email">Email</label></td>
                        <td class="td_right">
                            <input type="email" name="email" id="email" placeholder="请输入邮箱" required="required">
                            <span id="u_email" class="error"></span>
                        </td>
                    </tr>

                    <tr>
                        <td class="td_left"><label for="name">姓名</label></td>
                        <td class="td_right"><input type="text" name="name" id="name" placeholder="请输入姓名" required="required"></td>
                    </tr>

                    <tr>
                        <td class="td_left"><label>性别</label></td>
                        <td class="td_right">
                            <input type="radio" class="gender"  name="gender" value="男" checked> 男
                            <input type="radio" class="gender" name="gender" value="女"> 女
                        </td>
                    </tr>

                    <tr>
                        <td class="td_left"><label for="birth">出生日期</label></td>
                        <td class="td_right"><input type="date" name="birth" id="birth" placeholder="请输入出生日期" required="required"></td>
                    </tr>

                    <tr>
                        <td colspan="2" align="center"><input type="submit" id="btn_sub" value="注册"></td>
                    </tr>
                </table>
            </form>
        </div>

    </div>

    <div class="rg_right">
        <p>已有账号?<a href="denglu.html">立即登录</a></p>
    </div>
</div>

<script>
    $(function () {
        $("#btn_sub").on('click',function () {
            $.ajax({
                url: "http://localhost/:8002/add",
                data:{
                    username:$("#username").val(),
                    password:$("#password").val(),
                    name:$("#name").val(),
                    gender:$(".gender").val(),
                    email:$("#email").val(),
                    birthday:$("#birthday").val()
                },
                type: "POST",
                dataType: "jsonp",
                jsonp:"callback",
                crossDomain: true,
                success:function(data){
                    $("#u_name").html("用户注册成功");
                },
                error: function (data) {
                    $("#u_name").html("您的用户名已存在");
                }
            });
        });
    });


</script>



</body>
</html>